{
  "name": "dating-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:local:app1": "INSTANCE_ID=APP-1 INSTANCE_COLOR='#FF6B6B' next dev --port 3001",
    "dev:local:app2": "INSTANCE_ID=APP-2 INSTANCE_COLOR='#4ECDC4' next dev --port 3002",
    "dev:local:app3": "INSTANCE_ID=APP-3 INSTANCE_COLOR='#95E1D3' next dev --port 3003",
    "dev:custom": "node server.js",
    "build": "next build",
    "start": "next start -H 0.0.0.0",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:studio": "prisma studio",
    "db:fresh": "prisma migrate reset --force",
    "db:validate": "prisma validate",
    "db:format": "prisma format",
    "docker:up": "./start-docker.sh",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:down:volumes": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:logs:app": "docker-compose -f docker-compose.dev.yml logs -f app1 app2 app3",
    "docker:debug": "./debug-docker.sh",
    "docker:test": "./test-setup.sh",
    "docker:rebuild": "docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.dev.yml build --no-cache && ./start-docker.sh",
    "docker:ps": "docker-compose -f docker-compose.dev.yml ps",
    "docker:exec:app1": "docker exec -it dating-app-1 sh",
    "docker:exec:app2": "docker exec -it dating-app-2 sh",
    "docker:exec:app3": "docker exec -it dating-app-3 sh",
    "docker:health": "for i in 1 2 3; do echo \"App $i:\"; curl -s http://localhost:300$i/api/health | jq .; done"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.9.0",
    "@stream-io/video-react-sdk": "^1.18.5",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-query-devtools": "^5.80.6",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.1",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "firebase": "^11.8.1",
    "framer-motion": "^12.16.0",
    "ioredis": "^5.6.1",
    "lucide-react": "^0.511.0",
    "next": "^15.3.3",
    "next-auth": "^5.0.0-beta.28",
    "nodemailer": "^6.10.1",
    "nodenv": "^0.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.4",
    "stream-chat": "^9.6.0",
    "stream-chat-react": "^13.1.0",
    "yarn": "^1.22.22",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.3.3",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "knip": "^5.59.1",
    "postcss": "^8.5.4",
    "prisma": "^6.9.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.4",
    "typescript": "^5"
  }
}